{
    "name": "raidhub",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prepare": "husky",
        "dev": "next dev --experimental-https",
        "docs": "openapi-typescript https://api-docs.raidhub.io/openapi.json -o ./src/services/raidhub/openapi.d.ts --immutable-types",
        "docs:dev": "openapi-typescript http://localhost:8000/static/openapi -o ./src/services/raidhub/openapi.d.ts --immutable-types",
        "db:start": "docker-compose -f docker-compose.yml up -d",
        "db:stop": "docker-compose -f docker-compose.yml down",
        "studio": "prisma studio",
        "analyze": "ANALYZE=true yarn build",
        "lint": "next lint",
        "test": "jest",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\" && prisma format",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
        "build": "next build",
        "deploy": "./vercel/dev-deploy.sh"
    },
    "dependencies": {
        "@auth/core": "^0.18.4",
        "@aws-sdk/client-s3": "^3.490",
        "@aws-sdk/s3-presigned-post": "^3.490",
        "@discordjs/collection": "^2.0.0",
        "@formatjs/intl-localematcher": "^0.5.4",
        "@hookform/resolvers": "^3.3.4",
        "@planetscale/database": "1.15.0",
        "@prisma/adapter-planetscale": "5.10.2",
        "@prisma/client": "5.10.2",
        "@tanstack/react-query": "^4.36",
        "@trpc/client": "^10.44.1",
        "@trpc/react-query": "^10.44.1",
        "@trpc/server": "^10.44.1",
        "bungie-net-core": "latest",
        "dexie": "3.2.4",
        "dexie-react-hooks": "^1.1.7",
        "framer-motion": "^10.13.0",
        "next": "^14.2.0-canary.13",
        "next-auth": "^5.0.0-beta.4",
        "nextjs-toploader": "^1.6.6",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-hook-form": "^7.45.2",
        "react-markdown": "^9.0.1",
        "react-simple-typewriter": "^5.0.1",
        "server-only": "^0.0.1",
        "sharp": "^0.32.6",
        "styled-components": "^6.1.8",
        "superjson": "^1.13.1",
        "uuid": "^9.0.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@jest/globals": "^29.4.2",
        "@next/bundle-analyzer": "^13.4.13",
        "@next/eslint-plugin-next": "14.1.0",
        "@tanstack/react-query-devtools": "^4.36",
        "@types/node": "18",
        "@types/react": "^18.2.8",
        "@types/react-dom": "18.2.19",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "dotenv": "^16.0.3",
        "eslint": "8.40.0",
        "eslint-config-next": "14.1.0",
        "eslint-plugin": "^1.0.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^9.0.6",
        "jest": "^29.5.0",
        "node-fetch": "^3.3.1",
        "openapi-typescript": "^6.7.4",
        "prettier": "2.8.7",
        "prettier-plugin-organize-imports": "^3.2.4",
        "prisma": "5.10.2",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "tsafe": "^1.6.6",
        "typescript": "^5.3.3",
        "vercel": "latest"
    },
    "lint-staged": {
        "*.{ts,json}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.js": "eslint --cache --fix"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": false,
        "quoteProps": "as-needed",
        "jsxSingleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "bracketSameLine": true,
        "arrowParens": "avoid",
        "endOfLine": "lf",
        "plugins": [
            "prettier-plugin-organize-imports"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": true
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "next/core-web-vitals",
            "plugin:@typescript-eslint/recommended-type-checked",
            "plugin:@typescript-eslint/stylistic-type-checked"
        ],
        "ignorePatterns": [
            "*.d.ts"
        ],
        "rules": {
            "@typescript-eslint/consistent-type-imports": [
                "error",
                {
                    "prefer": "type-imports",
                    "fixStyle": "inline-type-imports"
                }
            ],
            "@typescript-eslint/no-unused-vars": [
                "warn",
                {
                    "argsIgnorePattern": "^_"
                }
            ],
            "@typescript-eslint/require-await": "off",
            "@typescript-eslint/array-type": "off",
            "@typescript-eslint/consistent-type-definitions": "off",
            "@next/next/no-page-custom-font": "off",
            "@typescript-eslint/unbound-method": "off",
            "@typescript-eslint/no-unsafe-enum-comparison": "off",
            "@typescript-eslint/no-misused-promises": "off"
        }
    }
}
